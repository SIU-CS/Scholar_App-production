<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_service_hour"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="siucs.scholarsprogramapp.ServiceHourActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp"
            android:id="@+id/updateServiceHoursButton"
            android:onClick="updateServiceHours"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/serviceHourUpdateTextbox"
            android:layout_alignBottom="@+id/updateServiceHoursButton"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="When you submit a service hours form, update your Service Hour Progress Tracker here."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/serviceHourPromptText"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="0 / 20"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:textSize="50dp"
            android:id="@+id/currentHoursOutOfTwentyText"
            android:layout_marginBottom="17dp"
            android:layout_above="@+id/updateServiceHoursButton"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Upload a photo of your service hour form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/uploadServiceHourPhotoButton"
            android:layout_marginBottom="77dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="View Submitted Service Hour Forms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="19dp"
            android:id="@+id/viewServiceHourPhotoButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</RelativeLayout>
